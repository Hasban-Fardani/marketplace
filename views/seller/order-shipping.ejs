<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pengiriman Pesanan</title>

    <link rel="stylesheet" href="../style/style.css">
    <link rel="icon" href="../style/asset/image/logo.png">
</head>
<body class="d-flex flex-column min-vh-100 bg-secondary-subtle">
    <!-- Navbar -->
    <%- include("../partials/seller-navbar") %>
    <div class="container-fluid" style="margin-top:70px;">
        <div class="row">
            <!-- Sidemenu -->
            <%- include("../partials/seller-sidemenu") %>

            <!-- Main -->
            <div class="col">
                <div class="accordion accordion-custom" id="ship">
                    <a class="accordion-btn" role="button" data-bs-toggle="collapse" href="#status" aria-expanded="true" aria-controls="status">
                        Status pengiriman
                    </a>
                    <a class="accordion-btn collapsed" role="button" data-bs-toggle="collapse" href="#sent" aria-expanded="false" aria-controls="sent">
                        Terkirim
                    </a>
                    <div class="accordion-item">
                        <div id="status" class="accordion-collapse collapse show" data-bs-parent="#ship">
                            <div class="accordion-body">
                                <div>
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>Kode Pesanan</th>
                                            <th>Status</th>
                                            <th>Rincian</th>
                                            <th>Aksi</th>
                                        </tr>
                                        <tr>
                                            <td>20240304/dj32r8h</td>
                                            <td>              
                                                <div class="d-flex align-items-end" style="height:80px;">
                                                    <div class="position-relative w-100" style="height:fit-content;">
                                                        <i class="fa-solid fa-shop position-absolute bottom-100 start-0 h4"></i>
                                                        <i class="fa-solid fa-motorcycle position-absolute top-0 translate-middle h5" style="left:25%;bottom:2px;"></i>
                                                        <span class="position-absolute translate-middle" style="left:25%;top:-27px;">JNE</span>
                                                        <i class="fa-solid fa-house position-absolute bottom-100 end-0 h4"></i>
                                                        <div class="progress bg-primary" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <div class="progress-bar bg-secondary text-end pe-1" style="width: 25%">25%</div>
                                                        </div>
                                                        <h6>Status: <span class="text-secondary">Pesanan sampai di Cirebon</span></h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><a href="" class="text-dark m-0">data</a></td>
                                            <td>
                                                <a href="" class="btn btn-danger">Batalkan</a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="sent" class="accordion-collapse collapse" data-bs-parent="#ship">
                            <div class="accordion-body">
                                <div>
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>Kode Pesanan</th>
                                            <th>Status</th>
                                            <th>Rincian</th>
                                        </tr>
                                        <tr>
                                            <td>20240304/dj32r8h</td>
                                            <td>Diterima pembeli</td>
                                            <td><a href="" class="text-dark m-0">data</a></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/_js.ejs") %>
</body>
</html>