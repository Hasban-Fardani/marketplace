        const data = {
        labels: labels,
        datasets: [{
            label: 'Domisili Seller',
            data: [650, 590, 800, 801, 560, 550, 400],
            borderWidth: 1
        }]
        };
        const ctx = document.getElementById("barChart").getContext('2d');
        new Chart(ctx, {
